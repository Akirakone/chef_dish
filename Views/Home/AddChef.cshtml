<h1> Add a Chef</h1>
@using chef_dish.Models
@model Chef

<body
    class="p-3 mb-2 bg-secondary text-white nes-text text-left container d-flex justify-content-center align-items-center">
    <div class="nes-container is-dark">
        <div class="nes-field is-inline">
            <form asp-action="NewChef" method="post">
                <div class="form-group">
                    <label for="firstname">First Name:</label>
                    <input  class="form-control" asp-for="firstname">
                    <span asp-validation-for="firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name:</label>
                    <input  class="form-control" asp-for="lastname">
                    <span asp-validation-for="lastname" class="text-danger"></span>
                </div>
                <div class="mb-3 text-center">
                    <label for="DOB">Date of Birth:</label>
                    <input  class="form-control" asp-for="DOB" type="date">
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Add Chef" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>
