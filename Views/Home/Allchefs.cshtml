@using chef_dish.Models
@model List<Chef>

<div>
        <h1 >
            <h2>Check out our roster of Chefs! <a href="AddChef" >Add a Chef</a></h2>
        </h1>
        <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th> Name</th>
                        <th>Age</th>
                        <th> # of Dishes</th>
                    </tr>
                    @{
                        foreach(Chef c in ViewBag.allchefs)
                    {
                        <tr>
                            <td>@c.firstname @c.lastname</td>
                            <td>@(DateTime.Now.Year- c.DOB.Year)</td>
                            <td>@c.AllDishes.Count</td>
                        </tr>
                    }
                    }
                </table>
            </div>
        </div>
    </div>
    </div>