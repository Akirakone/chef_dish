<h1> Add a Dish</h1>
@using chef_dish.Models
@model Dish


<body
    class="p-3 mb-2 bg-secondary text-white nes-text text-left container d-flex justify-content-center align-items-center">
    <div class="nes-container is-dark">
        <div style=" padding: 1rem;" class="nes-field is-inline">
            <form asp-action="NewDish" method="post">
                <div>
                    <label for="Chefid">Chefs Name:</label>
                    <select asp-for="Chefid">
                        @foreach (Chef c in ViewBag.allchefs)
                        {
                            <option value="@c.Chefid">@c.firstname @c.lastname</option>
                        }
                    </select>
                    <span asp-validation-for="Preparer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="name">Name of the Dish:</label>
                    <input asp-for="name" class="form-control">
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="calories"># of Calories:</label>
                    <input asp-for="calories"class="form-control">
                    <span asp-validation-for="calories" class="text-danger"></span>
                </div>
                <div>
                    <label for="tastiness">Tastiness</label>
                    <select asp-for="tastiness">
                        <option hidden selected disabled>Level</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="tastiness" class="text-danger"></span>
                </div>
                <div>
                    <label for="description">Description</label>
                    <textarea asp-for="description" cols="30" rows="3"></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Add Dish" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>
